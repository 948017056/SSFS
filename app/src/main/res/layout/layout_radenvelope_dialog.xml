<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55000000">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="3dp"
            android:padding="10dp"
            android:src="@mipmap/close" />

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="300dp"
            android:layout_height="420dp"
            android:layout_below="@+id/iv_close"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@mipmap/redenvelopebig"
            android:orientation="vertical">

            <com.cctv.ssfs.customview.CircleImageView
                android:id="@+id/iv_circleimg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_circleimg"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="邀请好友不仅你得红包，也帮好友赚红包。"
                android:textColor="@color/yellow3"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/tv_number1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/yellow3"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/tv_number2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_number1"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/yellow3"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/tv_number3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_number2"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="3dp"
                android:textColor="@color/yellow3"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/tv_number4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_number3"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="8dp"
                android:text="4、以上所有现金红包都无门槛，微信秒提。"
                android:textColor="@color/yellow3"
                android:textSize="@dimen/text_size_12" />

            <LinearLayout
                android:id="@+id/linear_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_number4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/selector_receivebtn_yellow"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingLeft="30dp"
                android:paddingRight="50dp"
                android:paddingTop="8dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:src="@mipmap/smallredenvelope" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="立即领取"
                    android:textColor="@color/bigbigin"
                    android:textSize="@dimen/text_size_18" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_bottom"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@mipmap/flower" />

        </RelativeLayout>


    </LinearLayout>

</FrameLayout>