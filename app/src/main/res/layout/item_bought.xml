<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:text="@string/loading"
        android:textColor="@color/bacak"
        android:textSize="@dimen/text_size_16" />

    <TextView
        android:id="@+id/tv_havecount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_code"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:text="@string/loading"
        android:textColor="@color/black_summary_info"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/tv_articleCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_code"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/tv_havecount"
        android:text="@string/loading"
        android:textColor="@color/black_summary_info"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/tv_menCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_code"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/tv_articleCount"
        android:text="@string/loading"
        android:textColor="@color/black_summary_info"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/btn_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:background="@drawable/shape_filling_red_radio4"
        android:gravity="center"
        android:text="查干货"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14" />

    <View
        style="@style/h_line"
        android:layout_below="@+id/tv_menCount" />

</RelativeLayout>