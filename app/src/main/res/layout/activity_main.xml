<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".view.MainActivity">

    <FrameLayout
        android:id="@+id/mFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cacaca" />

    <RadioGroup
        android:id="@+id/rg_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f4f5f6"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingTop="2dp">

        <RadioButton
            android:id="@+id/rb_menu_home"
            style="@style/tab_menu_item"
            android:drawableTop="@drawable/home_selector"
            android:text="干货" />

        <RadioButton
            android:id="@+id/rb_menu_search"
            style="@style/tab_menu_item"
            android:drawableTop="@drawable/search_selector"
            android:text="风声" />

        <RadioButton
            android:id="@+id/rb_menu_userpager"
            style="@style/tab_menu_item"
            android:drawableTop="@drawable/user_selector"
            android:text="我的" />

    </RadioGroup>
</LinearLayout>
